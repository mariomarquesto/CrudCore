@model IEnumerable<CrudCore.Models.Empleado>

@{
    ViewData["Title"] = "Lista de Empleados";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-success mb-3" asp-action="Create">Crear Nuevo Empleado</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Cargo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.NombreCompleto</td>
                <td>@empleado.Correo</td>
                <td>@empleado.Telefono</td>
                <td>@empleado.IdCargoNavigation?.Descricion</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@empleado.IdEmpleado">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@empleado.IdEmpleado">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
